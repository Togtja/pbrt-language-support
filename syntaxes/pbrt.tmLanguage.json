{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "pbrt",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [
				{
					"name": "keyword.control.pbrt",
					"match": "\\b(.*Begin|.*End)\\b"
				},
				{
					"name": "entity.name.class",
					"match": "\\b(Material|Shape|Camera|Film|Sampler|Integrator|LightSource)\\b"
				}
				,
				{
					"name": "entity.name.function",
					"match": "\\b(LookAt|CoordSysTransform|Translate|Rotate|Identity|Scale|CoordinateSystem|ConcatTransform)\\b"
				},
				{
					"name":"comment.line.number-sign.pbrt",
					"match": "(#).*$\\n?"
				}
			]
		},
		"strings": {
			"name": "string.quoted.double.pbrt",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.pbrt",
					"match": "\\\\."
				}
			]
		}
	},
	"scopeName": "source.pbrt"
}